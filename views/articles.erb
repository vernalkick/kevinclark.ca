<section class="main-section row">
  <div class="column column--third column--left">
    <h1>Articles</h1>
  </div>
  <div class="column column--two-thirds column--right column--no-padding">
    <h2>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore sed nostrum laboriosam quia ducimus dolorum, in qui recusandae. Suscipit delectus nesciunt, iste repellendus molestiae omnis eius officiis laboriosam vero, veritatis!</h2>
  </div>
</section>
<% @articles.group_by {|a| a.date.year }.each do |year, articles| %>
  <section class="main-section row">
    <div class="column column--third column--left">
      <h2><%= year %></h2>
    </div>
    <ul class="article-list column column--two-thirds column--right column--no-padding">
      <% articles.each do |article| %>
        <li class="article-list__item">
          <a href="<%= article.url %>">
            <h4><%= article.title %></h4>
            <p><%= article.excerpt %></p>
          </a>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>
