source 'https://rubygems.org'
ruby '2.0.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'

# Faster ERB
gem 'erubis'

# Use the right host
gem 'rack-canonical-host'

# XML parsing
gem 'nokogiri'

# Markdown
gem 'redcarpet'

# Assets
gem 'sprockets'
gem 'autoprefixer-rails'

# Stylesheet
gem 'sass'
gem 'sprockets-sass'

# Typography
gem 'typogruby'

group :development do
  # Reloading in development
  gem 'shotgun'
end
