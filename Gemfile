source 'https://rubygems.org'
ruby '2.0.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra'
gem 'sinatra-contrib'

# Faster ERB
gem 'erubis'

# Use the right host
# gem 'rack-canonical-host'

gem 'rest-client'

# XML parsing
gem 'nokogiri'

# RSS Builder
gem 'builder'

# Markdown
gem 'redcarpet'

# Assets
gem 'sprockets'
gem 'autoprefixer-rails'

# Stylesheet
gem 'sass'
gem 'sprockets-sass'

# Typography
gem 'typogruby'

group :development do
  # Reloading in development
  gem 'shotgun'
end

group :production do
  gem 'newrelic_rpm'
end
